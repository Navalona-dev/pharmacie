{% block _produit_categorie_productImages_widget %}

    {{ form_widget(form) }}

    <input type="hidden" id="widgets-counter" value="0">

    <div class="form-group ">
        <a class=" mt-3 btn btn-primary btn-sm" style="cursor: pointer;" id="add-image"> Ajouter une image </a>
    </div>
    
{% endblock %}

{% block _produit_categorie_productImages_entry_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _produit_categorie_productImages_entry_widget %}
    <div class="form-group mt-3" id="block_{{id}}">
        <div class="row">
           
            <div class="col-lg-11">
                <div class="form-group mb-3">
                    <label for="" class="mb-2">Image <span class="text-danger">*</span></label>
                    {{form_widget(form.imageFile)}}
                </div>
            </div>
            <div class="col-lg-1">
                <a class="text-danger delete-button" type="button" data-action="delete" data-target="#block_{{id}}"><i class="bi bi-trash"></i></a>
            </div>
        </div>
    </div>
        
{% endblock %}



