<div class="pagetitle">
    <h1>Liste produit par date la plus proche</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{path('app_admin')}}">Tableau de board</a></li>
        <li class="breadcrumb-item active">Liste</li>
      </ol>
    </nav>
  </div>
<section class="section">
    <div class="row">
      <div class="col-lg-12">
        <div class="card p-3 p-lg-5">
          
          <div class="card-body">
            
            <table class="table table-striped" id="liste-table-produit-categorie-date-peremption" style="width: 100%;">
              <thead>
                <th>Référence</th>
                <th>Produit</th>
                <th>Stock restant</th>
                <th>Quantité</th>
                <th>Quantité restant</th>
                <th>Date peremption</th>
              </thead>
              <tbody>
                {% if listes|length > 0 %}

                  {% for liste in listes %}
                    <tr>
                        <td> {{liste.reference}} </td>
                        <td> {{liste.nom}} </td>
                        <td> {{liste.stockRestant}} </td>
                        <td> {{liste.qtt}} </td>
                        <td> {{liste.qttRestant}} </td>
                        <td> {{liste.date|date('d-m-Y')}} </td>
                    </tr>
                  {% endfor %}
                
                {% else %}
                    <tr class="text-nowrap">
                        <td colspan="6">Aucun enregistrement trouvé</td>
                       <td></td>
                       <td></td>
                       <td></td>
                       <td></td>
                       <td></td>
                         
                    </tr>
                {% endif %}
                
              </tbody>
            </table>

          </div>
        </div>

      </div>
    </div>
    <div id="blocModalProduitCategorieEmpty">
    </div>
  </section>

