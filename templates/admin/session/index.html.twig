<div class="pagetitle">
    <h1>Liste session </h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{path('app_admin')}}">Tableau de board</a></li>
        <li class="breadcrumb-item active">Liste</li>
      </ol>
    </nav>
  </div>
<section class="section">
    <div class="row">
      <div class="col-lg-12">
        <div class="card px-3 py-3 px-lg-5 py-lg-5">
          <div class="card-body ">
            <table class="table table-striped" id="table-session" style="width: 100%;">
              <thead>
                <tr class="text-nowrap">
                    <th>Nom</th>
                    <th>Date début</th>
                    <th>Heure début</th>
                    <th>Date fin</th>
                    <th>Heure fin</th>
                    <th>Est-ce activé?</th>
                    <th>Est-ce fermé?</th>
                    <th>Description</th>

                </tr>
              </thead>
              <tbody>
                {% for liste in listes %}
                    <tr class="text-nowrap">
                        <td>{{liste.nom}}</td>
                        <td>{{liste.dateDebut|date('d-m-Y')}}</td>
                        <td>{{liste.heureDebut|date('H:i')}}</td>
                        <td>{{liste.dateFin|date('d-m-Y')}}</td>
                        <td>{{liste.heureFin|date('H:i')}}</td>
                        <td>{{ liste.isActive ? 'Oui' : 'Non' }}</td>
                        <td>{{liste.isClose ? 'Oui' : 'Non'}}</td>
                        <td>{{liste.description|raw}}</td>

                    </tr>
                {% else %}
                <tr>
                    <td colspan="8">Aucun enregistrement trouvé</td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
                {% endfor %}
                
              </tbody>
            </table>

          </div>
        </div>

      </div>
    </div>
  </section>

