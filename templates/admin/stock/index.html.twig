    function newStock(isNew = false) {
            $.ajax({
                url: '/admin/stock/new',
                type: 'POST',
                data: {isNew: isNew},
                success: function (response) {
                    $("#blocModalStockEmpty").empty();
                    $("#blocModalStockEmpty").append(response.html);
                    $('#modalNewStock').modal('show');
                },
                error: function (jqXHR, textStatus, errorThrown) {
