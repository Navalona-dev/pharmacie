{% extends 'admin/security/base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block stylesheets %}

    <style>
        .reset-password {
            margin-top: 100px;
        }

        .btn-primary, .btn-primary:hover, .btn-primary:focus {
            background-color: #4682B4 !important;
            border: none !important;
        }
    </style>

{% endblock %}

{% block body %}
<section class="container reset-password">
    <div class="row">
        <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12"></div>
        <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
            <div class="shadow card p-5">
                <h3 class="fs-4 fw-bold text-center mb-3 title">Mot de passe oublié</h3>
                {{ form_start(requestPassForm) }}
                <div class="form-group">
                    <label for="" class="mb-2">Adresse e-mail</label>
                    {{ form_widget(requestPassForm.email) }}
                </div>
                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary btn-sm" style="width: 100%;">Envoyer</button>
                </div>
                {{ form_end(requestPassForm) }}
            </div>
           
        </div>
        <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12"></div>
    </div>
</section>

{% endblock %}