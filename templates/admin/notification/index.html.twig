<style>
 .liste {
    border: 1px solid #5e5d5d;
    padding: 20px;
    border-radius: 15px;
 }
</style>

<div class="pagetitle">
    <h1>Liste notification </h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{path('app_admin')}}">Tableau de board</a></li>
        <li class="breadcrumb-item active">Liste</li>
      </ol>
    </nav>
  </div>
<section class="section">
    <div class="row">
        <div class="col-lg-12">
          <div class="card ">
            <div class="card-body p-3 p-lg-5">
                <div class="row">
                    {% for notification in listes %}
                    <div class="col-md-4 col-12 mb-4">
                        {% if notification.isStockMin == 1 %}
                        <div class="liste">
                            <a style="cursor: pointer;" onclick="return openModalNewStockByNotification({{notification.id}})">
                                <div>
                                    <h4 class="text-black text-center fw-bold">Stock presque épuisé</h4>
                                    <p class="text-center">{{ notification.message|raw }}</p>
                                    <p class="text-center">{{ notification.dateCreation|format_date }}</p>
                                </div>
                               
                            </a>
                        </div>
                            
                        {% elseif notification.isStockMax == 1 %}
                        <div class="liste">
                            <a href="#tab-stock" class="text-black" onclick="return handleNotificationClick({{notification.produitCategorie.id}}, {{notification.id}})">
                                <div>
                                    <h4 class="text-black text-center fw-bold">Stock surchargé</h4>
                                    <p class="text-center">{{ notification.message|raw }}</p>
                                    <p class="text-center">{{ notification.dateCreation|format_date }}</p>
                                </div>
                                
                            </a>
                        </div>
                           
                        {% else %}
                        <div class="liste">
                            <a style="cursor: pointer;" class="text-black" onclick="return openModalUpdatePriceProduit({{notification.produitCategorie.id}})">
                                <div>
                                    <h4 class="text-black text-center fw-bold">Prix à changer</h4>
                                    <p class="text-center">{{ notification.message|raw }}</p>
                                    <p class="text-center">{{ notification.dateCreation|format_date }}</p>
                                </div>
                            </a>
                        </div>
                            
                        {% endif %}
                    </div>
                    {% endfor %}
                </div>
            </div>
          </div>
  
        </div>
      </div>
</section>

